{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <h1>{% block header %}Zaloguj się{% endblock %}</h1>

    <label for="username">Nazwa użytkownika</label>
    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />

    <label for="password">Hasło</label>
    <input type="password" id="password" name="_password" required="required" autocomplete="current-password" />

    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
    <label for="remember_me">Zapamiętaj mnie</label>
    <br>
    <br>
    <input type="submit" class="btn btn-primary" id="_submit" name="_submit" value="Zaloguj się" />
    <a class="btn btn-primary" href="http://127.0.0.1:8000/register" role="button">Zarejestruj się</a>
    <a class="btn btn-primary" href="http://127.0.0.1:8000/resetting/request" role="button">Nie pamiętasz hasła?</a>
</form>
